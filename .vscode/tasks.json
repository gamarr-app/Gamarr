{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build dotnet",
      "command": "dotnet",
      "type": "process",
      "args": [
        "msbuild",
        "-restore",
        "${workspaceFolder}/src/Gamarr.sln",
        "-p:GenerateFullPaths=true",
        "-p:Configuration=Debug",
        "-p:Platform=Posix",
        "-consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/Gamarr.sln",
        "-property:GenerateFullPaths=true",
        "-consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/Gamarr.sln"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
